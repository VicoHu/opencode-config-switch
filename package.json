{
  "name": "opencode-config-switch",
  "version": "1.0.0",
  "description": "Oh My OpenCode / OpenCode 配置切换工具",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "build:mac": "vue-tsc --noEmit && vite build && electron-builder --mac",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.ts,.tsx --fix"
  },
  "dependencies": {
    "@types/highlight.js": "^9.12.4",
    "diff": "^8.0.3",
    "highlight.js": "^11.11.1",
    "pinia": "^2.1.7",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/tsconfig": "^0.5.1",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "naive-ui": "^2.37.3",
    "typescript": "^5.3.3",
    "vfonts": "^0.0.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.2.12"
  },
  "build": {
    "appId": "com.vicohu.opencode-config-switch",
    "productName": "OpenCode Config Switch",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    }
  }
}
